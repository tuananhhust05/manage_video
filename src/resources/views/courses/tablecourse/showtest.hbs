<form style="position:absolute;top:20%;width:50%;left:25%">
  {{#each result}}
  <div class="form-group" style="display:block;">
    <label style="display:block;">{{this.thutu}}.{{this.CauHoi}}</label> <!--số thứ tự tùy biến theo đề thi-->
    <p style="display:block;">A.{{this.a}}</p>
    <p style="display:block;">B.{{this.b}}</p>
    <p style="display:block;">C.{{this.c}}</p>
    <p style="display:block;">D.{{this.d}}</p>
    <select class="form-control"  name="traloi">  <!--name tùy biến theo đề thi--> 
      <option>a</option>
      <option>b</option>
      <option>c</option>
      <option>d</option>
    </select>
    <input type="hidden" class="form-control" name="da"value="{{this.dapan}}" required> <!--tên và giá trị đáp án tùy biên-->
    <input type="hidden" class="form-control" name="soluong"value="{{this.soluong}}" required> <!--tên và giá trị đáp án tùy biên-->
    <input type="hidden" class="form-control" name="tenbai"value="{{this.tenbai}}" required>
    <input type="hidden" class="form-control" name="khoahoc"value="{{this.khoahoc}}" required>
  </div>
  {{/each}} 
  
</form>

